{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            // CUDA Debug for GPU trainer
            "name": "CUDA Debug",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/cudnn/gpu_trainer",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CUDA: nvcc debug build"
        },
        {
            // C++ Debug
            "name": "C++ Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cudnn/cpu_trainer",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/cudnn/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "C/C++: g++ build active file",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Distributed Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/distributed/train.py",
            "args": [],
            "cwd": "${workspaceFolder}/distributed/",
        },
        {
            "name": "Torchrun Distributed Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "torch.distributed.run",
            "args": [
                "--nproc_per_node=1",
                "--nnodes=1",
                "${workspaceFolder}/distributed/train.py"
            ],
            "cwd": "${workspaceFolder}/distributed/",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}